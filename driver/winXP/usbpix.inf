%SILAB.DeviceDesc5% = slbusbxp, USB\VID_04b4&PID_8613

;------------------------------------------------------------------------------
;  SILAB class definition 
;------------------------------------------------------------------------------

[ClassInstall32]
AddReg=ClassInstall32AddReg
CopyFiles=ClassInstall32CopyFiles

[ClassInstall32AddReg]
HKR,,,,"SILAB Devices"
HKR,,Installer32,,"silabclass.dll,SilabClassInstaller"
HKR,,EnumPropPages32,,silabclass.dll
HKR,,Icon,,109

[ClassInstall32CopyFiles]
silabclass.dll
;silab_devman.cpl

[slbusbHwAddReg]
;HKR,,FriendlyName,,"SILAB USB Controller"
HKR,,SampleInfo,,"http:\\siliconlab.physik.uni-bonn.de"


;------------------------------------------------------------------------------
;  Files section
;------------------------------------------------------------------------------

[SourceDisksNames]
1=%INSTDISK%,,,

[DestinationDirs]
DriverCopyFiles = 10,System32\Drivers
ClassInstall32CopyFiles=11

[SourceDisksFiles]
slbusbxp.sys = 1,,
silabclass.dll=1,,

[slbusbxp]
CopyFiles=DriverCopyFiles

[DriverCopyFiles]
slbusbxp.sys

;------------------------------------------------------------------------------
; Service Installation
;------------------------------------------------------------------------------

[slbusbxp.Services]
AddService = slbusbxp, 0x00000002 , slbusbxpService


[slbusbxp.hw]
AddReg=slbusbHwAddReg

[slbusbxpService]
ServiceType    = 1                  ; SERVICE_KERNEL_DRIVER
StartType      = 3                  ; SERVICE_DEMAND_START
ErrorControl   = 1                  ; SERVICE_ERROR_IGNORE
LoadOrderGroup = Base
ServiceBinary  = %12%\slbusbxp.sys

